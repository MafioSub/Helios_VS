@model Helios.Models.SALA

@{
    ViewBag.Title = "EditRoom";
}

<h2>Edycja sali</h2>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>SALA</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.IdSali)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.IdSali, new { @readonly = "readonly" })
            @Html.ValidationMessageFor(model => model.IdSali)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.NazwaSali)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.NazwaSali)
            @Html.ValidationMessageFor(model => model.NazwaSali)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Klimatyzacja)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Klimatyzacja)
            @Html.ValidationMessageFor(model => model.Klimatyzacja)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.FK_IdKina)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.FK_IdKina)
            @Html.ValidationMessageFor(model => model.FK_IdKina)
        </div>

        <p>
            <input type="submit" value="zapisz" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("wróć do listy sal", "Rooms")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
