@model IEnumerable<Helios.Models.SALA>

@{
    ViewBag.Title = "Sale kinowe";
}

<h2>Sale kinowe</h2>

<p>
    @Html.ActionLink("dodaj nową salę", "CreateRoom")
</p>
<table>
    <tr>
        <th style="width:60px">
            @Html.DisplayNameFor(model => model.IdSali)
        </th>
        <th style="width:120px">
            @Html.DisplayNameFor(model => model.NazwaSali)
        </th>
        <th style="width:120px">
            @Html.DisplayNameFor(model => model.Klimatyzacja)
        </th>
        <th style="width:60px">
            @Html.DisplayNameFor(model => model.FK_IdKina)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.IdSali)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NazwaSali)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Klimatyzacja)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FK_IdKina)
        </td>
        <td>
            @Html.ActionLink("edycja", "EditRoom", new {  id=item.IdSali  }) |
            @Html.ActionLink("szczegóły", "RoomDetails", new {  id=item.IdSali }) |
            @Html.ActionLink("usuń", "DeleteRoom", new {  id=item.IdSali  }) |
            @Html.ActionLink("zarządzaj miejscami", "RoomSeats", new {  id=item.IdSali  })
        </td>
    </tr>
}

</table>
